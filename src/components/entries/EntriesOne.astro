---
const { title, url, description, pubDate, author, image } = Astro.props;
---

<li>
  <a href={url} title={title} class="group">
    <div
      class="flex flex-col items-start justify-between flex-1 w-full text-xs text-black bg-white uppercase">
      <div
        class="inline-flex items-center p-3 justify-between w-full bg-black text-white">
        <p>
          {author}
        </p>
        <time datetime="2020-03-16"> {pubDate}</time>
      </div>
      <div class="w-full p-3 hover:bg-orange-500 hover:text-white duration-200">
        <p>{title}</p>

        <p class="mt-2">
          {description}
        </p>
      </div>
    </div>
  </a>
</li>
