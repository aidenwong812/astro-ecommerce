<section>
  <div class="2xl:max-w-7xl 2xl:mx-auto">
    <div
      class="flex flex-col text-xs divide-y divide-black border-b border-black uppercase items-start">
      <div
        class="bg-white p-3 mt-11 text-black w-full border-t inline-flex items-center justify-between border-black">
        log in to WILLIAMSBURG
      </div>
      <form
        action="#_"
        class="w-full divide-y divide-black h-full flex flex-col">
        <div class="p-3">
          <label for="email" class="block">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            autocomplete="email"
            placeholder="Your email address"
            class="block w-full border-0 text-xs uppercase px-0 bg-transparent placeholder:text-neutral-600 focus:ring-2 focus:ring-inset focus:ring-gray font-light"
          />
        </div>
        <div class="p-3">
          <label for="password" class="block">password</label>
          <input
            type="password"
            name="password"
            id="password"
            autocomplete="password"
            placeholder="enter your password"
            class="block w-full border-0 text-xs uppercase px-0 bg-transparent placeholder:text-neutral-600 focus:ring-2 focus:ring-inset focus:ring-gray font-light"
          />
        </div>

        <div class="p-3">
          <div class="flex items-center">
            <input
              id="remember-me"
              name="remember-me"
              type="checkbox"
              class="h-3 w-3 rounded-full border-zinc-300 text-orange-600 focus:ring-orange-500"
            />
            <label for="remember-me" class="ml-3">Remember me</label>
          </div>
        </div>
        <button
          class="text-xs p-3 shrink-0 w-full bg-black uppercase text-white hover:bg-orange-500"
          >send</button
        >
      </form>
      <div
        class="bg-white p-3 text-black w-full border-t inline-flex items-center gap-3 border-black">
        need an account? <a
          class="hover:text-orange-500 underline"
          href="/forms/signup">create an account</a
        >
      </div>
    </div>
  </div>
</section>
